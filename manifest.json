{
    "manifest_version": 2,

    "name": "Учёт времени в Youtrack",
    "version": "1.0",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "declarativeContent",
        "https://*/"
    ]
}